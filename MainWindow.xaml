<Window x:Class="PokeDex.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PokeDex"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="PokéDex" Height="768" Width="1360">

    <Grid>
        <Grid Background="#FFF0F0F0" Margin="16,16,0,16" HorizontalAlignment="Left" Width="1328" >
            <TextBox x:Name="PokeSearchbox" Text="Name or Number" Margin="25,16,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="192" Height="32" />
            <Button x:Name="Search_Pokemon" Content="Search" Margin="232,16,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Background="#FFFA0F1B" Click="Search_Pokemon_Click" />
            <Image x:Name="PokePicture" Source="https://userware-xaml-designer-backend-api.azurewebsites.net/images/logo.png" Margin="736,32,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="528" Height="640" />
            <Button Margin="840,616,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Background="#FFFA0F0F" Content="Sprite" />
            <Button Content="Male" Margin="1072,616,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Background="#FFFA0F0F" />
            <Button Margin="1176,616,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Content="Female" Background="#FFFA0F0F" />
            <Button Margin="960,616,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Content="Shiny" Background="#FFFA0F0F" />
            <Button Content="Artwork" Margin="736,616,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="32" Background="#FFFA0F0F" />
            <Grid Background="#FFF0F0F0" Margin="24,72,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="680" Height="232" >
                <TextBlock x:Name="TextPokemonHeightValue" FontSize="29" Margin="24,173,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" />
                <TextBlock x:Name="TextPokemonWeightValue" FontSize="29" Margin="360,173,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="144" />
                <TextBlock x:Name="TextPokemonNameValue" FontSize="29" Margin="360,63,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" />
                <TextBlock Text="Number" FontSize="29" Margin="24,24,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" />
                <TextBlock Text="Height" FontSize="29" Margin="24,133,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" />
                <TextBlock x:Name="TextPokemonNumberValue" FontSize="29" Margin="24,62,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" />
                <TextBlock Text="Weight" FontSize="29" Margin="360,133,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="96" />
                <TextBlock Text="Name" FontSize="29" Margin="360,24,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" />
            </Grid>
            <Grid Background="#FFF0F0F0" Margin="24,344,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="616" Height="208" >
                <ListBox x:Name="ListBoxAbilities" Margin="8,8,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="176">

                </ListBox>
            </Grid>

        </Grid>
    </Grid>
</Window>
